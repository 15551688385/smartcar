<launch>

    <!--<include file="$(find cv_camera)/launch/cv_camera_driver.launch"/>-->
    
    <!--<include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch" />-->
    
    <arg name="pointcloud_input" default="/velodyne_points" /> <!-- PointCloud source topic-->
    <arg name="image_input" default="/cv_camera/image_raw" /> <!-- Raw Image source topic to be rectified-->
    <arg name="camera_info_input" default="/camera_info" /> <!-- CameraInfo source topic-->
    <arg name="fusion_output_topic" default="/points_output"/>

    <arg name="image_src" default="/cv_camera/image_raw" />
    <arg name="camera_info_src" default="/camera_info" />
    <arg name="calibration_file" default="$(find calibration)/docs/20190120_111413_autoware_lidar_camera_calibration.yaml"/>
    <arg name="target_frame" default="velodyne"/>
    <arg name="camera_frame" default="camera"/>
    <arg name="projection_matrix_topic" default="/projection_matrix"/>

    <node pkg="joint_pixel_pointcloud" type="joint_pixel_pointcloud" name="pixel_cloud_fusion" output="screen">
        <param name="pointcloud_input" value="$(arg pointcloud_input)" />
        <param name="image_input" value="$(arg image_input)" />
        <param name="camera_info_input" value="$(arg camera_info_input)" />
        <param name="fusion_output_topic" value="$(arg fusion_output_topic)" />
    </node>

    <node pkg="calibration" type="calibration_pub_node" name="calibration_publisher">      
        <param name="register_lidar2camera_tf" type="bool" value="true"/>
        <param name="publish_extrinsic_mat" type="bool" value="true"/>
        <param name="publish_camera_info" type="bool" value="true"/>
        <param name="image_topic" value="$(arg image_src)"/>
        <param name="camera_info_src" value="$(arg camera_info_src)"/>
        <param name="calibration_file" value="$(arg calibration_file)"/>
        <param name="projection_matrix_topic" value="$(arg projection_matrix_topic)"/>
        <param name="target_frame" type="str" value="$(arg target_frame)"/>
        <param name="camera_frame" type="str" value="$(arg camera_frame)"/> 
    </node>
    


</launch>
